{
  "name": "phillipsharring-phillipharrington.com",
  "version": "1.0.0",
  "description": "Phillip Harrington dot com",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel server:dev watch:html watch:tailwind watch:js",
    "server:dev": "node ./browsersync-config.js",
    "node-server:dev": "node src/dev-server.js",
    "watch:html": "nodemon --watch ./content --watch ./components --watch ./assets/templates/layout.html -e html -x \"npm run build:components\"",
    "watch:tailwind": "tailwindcss -i ./assets/css/style.css -o ./public/css/style.css --watch --minify",
    "watch:js": "nodemon --watch ./assets/js -e js -x \"npm run compress:js\"",
    "build:html": "node ./src/html-build.js",
    "build:components": "node ./src/components-build.js",
    "compress:js": "node ./src/js-compress.js"
  },
  "author": "Phillip Harrington <phillip@phillipharrington.com>",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^3.0.3",
    "ejs": "^3.1.10",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "html-minifier": "^4.0.0",
    "jsdom": "^25.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-ejs": "^1.0.3",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.3",
    "terser": "^5.36.0"
  }
}
