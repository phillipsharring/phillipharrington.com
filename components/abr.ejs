<% with (locals || { tooltip: ''}) { %>
<span class="group relative inline-flex cursor-help items-center">
  <span
    class="text-blue-900 underline decoration-dotted decoration-1 underline-offset-2"
  >
    <%- yield %>
  </span>
  &nbsp;
  <!-- <span class="ml-1 text-xs text-blue-500">❓</span> -->
  <!-- Tooltip -->
  <span
    class="absolute bottom-full left-1/2 z-10 mb-1 hidden -translate-x-1/2 whitespace-nowrap rounded bg-gray-800 px-2 py-1 text-xs text-white shadow-lg group-hover:block"
  >
    <%= locals.tooltip %>
  </span>
</span>

<% } %>
