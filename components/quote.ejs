<% with (locals || { citation: '' }) { %>
<blockquote
  class="bg-left-quote relative block w-full overflow-hidden rounded-2xl bg-stone-100 px-10 py-6 font-serif text-lg italic sm:mx-auto sm:w-5/6"
>
  <%- yield %> <% if (locals.citation) { %>
  <footer>
    <cite class="float-right mt-4 text-sm">&mdash; <%= locals.citation %></cite>
  </footer>
  <% } %>
</blockquote>
<% } %>
