<% with (locals || { src: '', alt: '', caption: ''}) { %>
<figure class="mb-10 w-full sm:float-right sm:m-0 sm:mb-4 sm:ml-4 sm:w-1/3">
  <img
    src="<%= locals.src %>"
    alt="<%= locals.alt %>"
    class="mx-auto w-full max-w-72 border-4 border-gray-900 sm:w-full"
  />
  <figcaption class="mt-2 text-center font-serif italic">
    <%= locals.caption %>
    <asterisk />
  </figcaption>
</figure>
<% } %>
