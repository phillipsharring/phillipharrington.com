<% with(locals || { metaDescription: '', metaKeywords: '', ogTitle: '',
ogDescription: '', ogImage: '', url: '', yield: '' }) { %>
<!doctype html>
<html lang="en" class="m-0 h-[100.09%] p-0">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <%- meta %>
    <meta
      property="og:url"
      content="https://phillipharrington.com/<%= url %>"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body id="body" class="relative m-0 h-full p-0 md:bg-slate-50">
    <a href="#main" class="sr-only focus:not-sr-only">Skip to content</a>
    <div
      class="flex h-full flex-col overflow-auto lg:container md:mx-auto md:w-4/5 md:bg-white md:shadow-lg lg:w-3/4"
      id="wrapper"
    >
      <layout-header></layout-header>
      <layout-main> <%- yield %> </layout-main>
      <layout-footer></layout-footer>
    </div>
    <script src="/js/script.js"></script>
  </body>
</html>
<% } %>
